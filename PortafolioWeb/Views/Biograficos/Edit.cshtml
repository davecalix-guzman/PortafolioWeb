@model PortafolioWebAdministracion.DTOs.BiograficoDTO
@{
    ViewData["ControllerName"] = "Informacion Biografica";
    ViewData["Title"] = "Modificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var imgSrc = ViewBag.ImagenMostrar;
    if (imgSrc != null)
    {
        var base64 = Convert.ToBase64String(ViewBag.ImagenMostrar);
        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
    else
    {
        imgSrc = Convert.ToString("/images/images/usuario.png");
    }
}

<div class="alert alert-warning text-left" role="alert">
    <b>MODIFICAR INFORMACION BIOGRAFICA</b>
</div>
@using (Html.BeginForm("Edit", "Biograficos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row text-left">
        <div class="container-fluid">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col">
                    <div class="card text-center">
                        <div class="card-header">
                            <label class="control-label">Cargue la imagen que desee visualizar en su perfil de portafolio</label>
                        </div>
                        <div class="card-body">
                            <output id="imageUser">
                                <img class="imageUser" src=@imgSrc />
                            </output>
                        </div>
                        <div class="card-footer">
                            <div>
                                <div class="caption text-center">
                                    <label class="btn btn-light btn-block" for="files">Cargar Imagen</label>
                                    <input class="form-control" asp-for="Imagen" accept="image/*" hidden="hidden" type="file" id="files">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <label asp-for="Nombres" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-file-signature alert-info" />
                        </div>
                        <input asp-for="Nombres" class="form-control" style="height:30px" placeholder="Nombres" />
                        <span asp-validation-for="Nombres" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>
                    <label asp-for="Apellidos" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-signature alert-info" />
                        </div>
                        <input asp-for="Apellidos" class="form-control" style="height:30px" placeholder="Apellidos" />
                        <span asp-validation-for="Apellidos" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>
                    <label asp-for="FechaNacimiento" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-calendar alert-info" />
                        </div>
                        <input asp-for="FechaNacimiento" class="form-control" style="height:30px" />
                        <span asp-validation-for="FechaNacimiento" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>
                    <label asp-for="EstadoCivil" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-hand-holding-heart alert-info" />
                        </div>
                        <select asp-for="EstadoCivil" class="form-control" style="height:30px; font-size:small">
                            <option value="">Seleccione</option>
                            <option value="Soltero">Soltero</option>
                            <option value="Casado">Casado</option>
                            <option value="Viudo">Viudo</option>
                            <option value="Divorciado">Divorciado</option>
                            <option value="Separado">Separado</option>
                        </select>
                        <span asp-validation-for="EstadoCivil" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>
                    <label asp-for="Telefono" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-phone alert-info" />
                        </div>
                        <input asp-for="Telefono" class="form-control" style="height:30px" placeholder="Telefono fijo" />
                        <span asp-validation-for="Telefono" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>
                </div>
                <div class="col">
                    <label asp-for="Celular" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-mobile-alt alert-info" />
                        </div>
                        <input asp-for="Celular" class="form-control" style="height:30px" placeholder="Telefono celular" />
                        <span asp-validation-for="Celular" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>
                    <label asp-for="Email" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-at alert-info" />
                        </div>
                        <input asp-for="Email" class="form-control" style="height:30px" placeholder="Correo electronico" />
                        <span asp-validation-for="Email" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>
                    <label asp-for="Direccion" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-map-marked alert-info" />
                        </div>
                        <textarea class="form-control" asp-for="Direccion" rows="4" style="resize: none; text-align: justify; white-space: pre-line; -moz-text-align-last: left; text-align-last: left;"></textarea>
                        <span asp-validation-for="Direccion" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <label asp-for="Link" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fab fa-linkedin-in alert-info" />
                        </div>
                        <input asp-for="Link" class="form-control" style="height:30px" placeholder="Linkedin" />
                        <span asp-validation-for="Link" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>
                    <label asp-for="Perfil" class="control-label"></label>
                    <div class="form-group input-group mb-1">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-list-ol alert-info" />
                        </div>
                        <textarea class="form-control" asp-for="Perfil" rows="7" style="resize: none; text-align: justify; white-space: pre-line; -moz-text-align-last: left; text-align-last: left;"></textarea>
                        <span asp-validation-for="Perfil" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>
                </div>
            </div>
            <div class="form-group text-left mt-3">
                <a class="btn btn-info btn-sm" data-toggle="tooltip"
                   data-placement="top"
                   title="Regresar" asp-action="Index">
                    <span class="fas fa-arrow-circle-left" />
                </a>
                <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
