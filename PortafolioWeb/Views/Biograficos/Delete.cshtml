@model PortafolioWebAdministracion.Models.Biografico
@{
    ViewData["ControllerName"] = "Informacion Biografica";
    ViewData["Title"] = "Eliminar"; 
}
<div class="alert alert-primary text-left" role="alert">
    <b>ELIMINAR INFORMACION BIOGRAFICA</b>
</div>
<div class="alert alert-danger text-left" role="alert">
    Esta seguro que desea eliminar la informacion biografica?
</div>

<div>
    <hr />
    <table class="table table-hover table-dark text-left">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EstadoCivil)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Nombres)
                    @Html.DisplayFor(modelItem => modelItem.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.FechaNacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.EstadoCivil)
                </td>
            </tr>
        </tbody>
    </table>
</div>
<hr />
<div class="text-left">
    <form asp-action="Delete">
        <div class="form-group">
            <a class="btn btn-info btn-sm" data-toggle="tooltip"
               data-placement="top"
               title="Regresar" asp-action="Index">
                <span class="fas fa-arrow-circle-left" />
            </a>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" />
        </div>
    </form>
</div>
