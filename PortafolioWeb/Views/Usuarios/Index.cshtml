@model IEnumerable<PortafolioWebAdministracion.DTOs.UsuarioDTO>

@{
    ViewData["ControllerName"] = "Usuarios";
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="alert alert-primary text-left" role="alert">
        <b>LISTADO DE USUARIOS</b>
    </div>
    <p class="text-left">
        <div class="form-group input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text fas fa-plus alert-danger" />
            </div>
            <a class="btn btn-info btn-sm"
               data-toggle="tooltip"
               data-placement="top"
               title="Crear nuevo usuario"
               asp-action="Create">
                Nuevo usuario
            </a>
        </div>
    </p>
    <hr />
<table class="table table-striped table-hover table-dark text-left">
    <thead>
        <tr>
            <th scope="col">
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreUsuario)
            </th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreUsuario)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" data-toggle="tooltip"
                       data-placement="top"
                       title="Modificar usuario" asp-action="Edit" asp-route-id="@item.Id">
                        <span class="fas fa-edit" />
                    </a>
                    <a class="btn btn-info btn-sm" data-toggle="tooltip"
                       data-placement="top"
                       title="Ver detalles" asp-action="Details" asp-route-id="@item.Id">
                        <span class="fas fa-info-circle" />
                    </a>
                    <a class="btn btn-danger btn-sm" data-toggle="tooltip"
                       data-placement="top"
                       title="Eliminar usuario" asp-action="Delete" asp-route-id="@item.Id">
                        <span class="fas fa-trash" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
