@model PortafolioWebAdministracion.DTOs.UsuarioDTO

@{
    ViewData["ControllerName"] = "Usuarios";
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-primary text-left" role="alert">
    <b>NUEVO USUARIO</b>
</div>
<hr />
<div class="row text-left">
    <div class="col-md-4 class=" form-control-sm"">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="NombreUsuario" class="control-label"></label>
            <div class="form-group input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text fas fa-user alert-info" />
                </div>
                <input asp-for="NombreUsuario" class="form-control" style="height:30px" placeholder="Ingrese su usuario" />
                <span asp-validation-for="NombreUsuario" class="alert-danger" style="font-weight:bolder;"></span>
            </div>
            <label asp-for="Contrasena" class="control-label"></label>
            <div class="form-group input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text fas fa-key alert-info" />
                </div>
                <input asp-for="Contrasena" class="form-control" style="height:30px" placeholder="Ingrese la contraseña" />
                <span asp-validation-for="Contrasena" class="alert-danger" style="font-weight:bolder;"></span>
            </div>
            <div class="form-group text-left">
                <a class="btn btn-info btn-sm" data-toggle="tooltip"
                   data-placement="top"
                   title="Regresar" asp-action="Index">
                    <span class="fas fa-arrow-circle-left" />
                </a>
                <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
