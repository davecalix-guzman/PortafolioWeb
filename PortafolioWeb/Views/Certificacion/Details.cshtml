@model PortafolioWebAdministracion.EntityModels.Certificacion

@{
    ViewData["ControllerName"] = "Certificaciones";
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-primary text-left" role="alert">
    <b>DETALLE DE CURSO O CERTIFICACION</b>
</div>
<div class="alert alert-info text-left" role="alert">
    Informacion del curso o certificacion seleccionada
</div>

<table class="table table-hover table-dark text-left">
    <thead>
        <tr>
            <th scope="col">
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CertificacionDescripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anio)
            </th>          
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Id)
            </td>
            <td>
                @Html.DisplayFor(model => model.CertificacionDescripcion)
            </td>
            <td>
                @Html.DisplayFor(model => model.Duracion)
                @Html.DisplayFor(model => model.UnidadTiempo)
            </td>
            <td>
                @Html.DisplayFor(model => model.Anio)
            </td>            
        </tr>
    </tbody>
</table>
<hr />
<div class="text-left">
    <div class="form-group">
        <a class="btn btn-info btn-sm" data-toggle="tooltip"
           data-placement="top"
           title="Regresar" asp-action="Index">
            <span class="fas fa-arrow-circle-left" />
        </a>
        <a class="btn btn-warning btn-sm" data-toggle="tooltip"
           data-placement="top"
           title="Modificar curso o certificacion" asp-action="Edit"
           asp-route-id="@Model.Id">
            <span class="fas fa-edit" />
        </a>
    </div>
</div>
