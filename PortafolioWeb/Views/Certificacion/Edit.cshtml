@model PortafolioWebAdministracion.EntityModels.Certificacion

@{
    ViewData["ControllerName"] = "Certificaciones";
    ViewData["Title"] = "Modificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="alert alert-primary text-left" role="alert">
    <b>MODIFICAR CURSO O CERTIFICACION</b>
</div>
<div class="row text-left">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <label asp-for="CertificacionDescripcion" class="control-label"></label>
            <div class="form-group input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text fas fa-medal alert-info" />
                </div>
                <input asp-for="CertificacionDescripcion" class="form-control" style="height:30px" placeholder="Ingrese el nombre del curso" />
                <span asp-validation-for="CertificacionDescripcion" class="alert-danger" style="font-weight:bolder;"></span>
            </div>

            <label asp-for="Duracion" class="control-label"></label>
            <div class="form-group input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text fas fa-clock alert-info" />
                </div>
                <input asp-for="Duracion" class="form-control" style="height:30px" placeholder="Ingrese la duracion" />
                <span asp-validation-for="Duracion" class="alert-danger" style="font-weight:bolder;"></span>
            </div>

            <label asp-for="UnidadTiempo" class="control-label"></label>
            <div class="form-group input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text fas fa-calendar-week alert-info" />
                </div>
                <select asp-for="UnidadTiempo" class="form-control" style="height:30px">
                    <option value="">Seleccion la unidad de tiempo</option>
                    <option value="Hora(s)">Hora(s)</option>
                    <option value="Dia(s)">Dia(s)</option>
                    <option value="Semana(s)">Semana(s)</option>
                    <option value="Mes(es)">Mes(es)</option>
                </select>
                <span asp-validation-for="UnidadTiempo" class="alert-danger" style="font-weight:bolder;"></span>
            </div>

            <label asp-for="Anio" class="control-label"></label>
            <div class="form-group input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text fas fa-calendar alert-info" />
                </div>
                <input asp-for="Anio" class="form-control" style="height:30px" placeholder="Ingrese la duracion" />
                <span asp-validation-for="Anio" class="alert-danger"></span>
            </div>

            <div class="form-group text-left">
                <a class="btn btn-info btn-sm" data-toggle="tooltip"
                   data-placement="top"
                   title="Regresar" asp-action="Index">
                    <span class="fas fa-arrow-circle-left" />
                </a>
                <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
