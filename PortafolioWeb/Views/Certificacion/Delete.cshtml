@model PortafolioWebAdministracion.EntityModels.Certificacion

@{
    ViewData["ControllerName"] = "Certificaciones";
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-primary text-left" role="alert">
    <b>ELIMINAR CURSO O CERTIFICACION ACADEMICA</b>
</div>
<div class="alert alert-danger text-left" role="alert">
    Esta seguro que desea eliminar la certificacion?
</div>
<div>
    <hr />
    <table class="table table-hover table-dark text-left">
        <thead>
            <tr>
                <th scope="col">
                    #
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CertificacionDescripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Anio)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => modelItem.Id)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.CertificacionDescripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Duracion)
                    @Html.DisplayFor(modelItem => modelItem.UnidadTiempo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Anio)
                </td>
            </tr>
        </tbody>
    </table>
</div>
<hr />
<div class="text-left">
    <form asp-action="Delete">
        <div class="form-group">
            <a class="btn btn-info btn-sm" data-toggle="tooltip"
               data-placement="top"
               title="Regresar" asp-action="Index">
                <span class="fas fa-arrow-circle-left" />
            </a>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" />
        </div>
    </form>
</div>

