@model PortafolioWebAdministracion.Models.ExperienciaLaboral

@{
    ViewData["ControllerName"] = "Experiencia Laboral";
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-primary text-left" role="alert">
    <b>DETALLE DE EXPERIENCIA LABORAL</b>
</div>
<div class="alert alert-info text-left" role="alert">
    Informacion de la experiencia laboral seleccionada
</div>

<table class="table table-hover table-dark text-left">
    <thead>
        <tr>
            <th scope="col">
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreEmpresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFinalizacion)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.NombreEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Puesto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.FechaFinalizacion)
            </td>
        </tr>
    </tbody>
</table>
<hr />
<div class="text-left">
    <div class="form-group">
        <a class="btn btn-info btn-sm" data-toggle="tooltip"
           data-placement="top"
           title="Regresar" asp-action="Index">
            <span class="fas fa-arrow-circle-left" />
        </a>
        <a class="btn btn-warning btn-sm" data-toggle="tooltip"
           data-placement="top"
           title="Modificar formacion academica" asp-action="Edit"
           asp-route-id="@Model.Id">
            <span class="fas fa-edit" />
        </a>
    </div>
</div>



