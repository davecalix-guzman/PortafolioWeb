@model PortafolioWebAdministracion.Models.ExperienciaLaboral

@{
    ViewData["ControllerName"] = "Experiencia Laboral";
    ViewData["Title"] = "Modificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-primary text-left" role="alert">
    <b>MODIFICAR EXPERIENCIA LABORAL</b>
</div>

<div class="row text-left">
    <div class="container-fluid">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-5">
                    <label asp-for="NombreEmpresa" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-warehouse alert-info" />
                        </div>
                        <input asp-for="NombreEmpresa" class="form-control" style="height:30px" placeholder="Ingrese el nombre de la empresa" />
                        <span asp-validation-for="NombreEmpresa" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>

                    <label asp-for="Puesto" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fab fa-dev alert-info" />
                        </div>
                        <input asp-for="Puesto" class="form-control" style="height:30px" placeholder="Ingrese el puesto desempeñado" />
                        <span asp-validation-for="Puesto" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>

                    <label asp-for="Responsabilidad" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-list-ol alert-info" />
                        </div>
                        <textarea class="form-control" asp-for="Responsabilidad" style="resize: none; text-align: justify; white-space: pre-line; -moz-text-align-last: left; text-align-last: left;" rows="7"></textarea>
                        <span asp-validation-for="Responsabilidad" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>
                </div>
                <div class="col-3">
                    <label asp-for="FechaInicio" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-calendar-plus alert-info" />
                        </div>
                        <input asp-for="FechaInicio" class="form-control" style="height:30px" />
                        <span asp-validation-for="FechaInicio" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>

                    <label asp-for="FechaFinalizacion" class="control-label"></label>
                    <div class="form-group input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fas fa-calendar-minus alert-info" />
                        </div>
                        <input asp-for="FechaFinalizacion" class="form-control" style="height:30px" />
                        <span asp-validation-for="FechaFinalizacion" class="alert-danger" style="font-weight:bolder;"></span>
                    </div>
                </div>
                <div class="col-2">

                </div>
            </div>
            <div class="form-group text-left">
                <a class="btn btn-info btn-sm" data-toggle="tooltip"
                   data-placement="top"
                   title="Regresar" asp-action="Index">
                    <span class="fas fa-arrow-circle-left" />
                </a>
                <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
