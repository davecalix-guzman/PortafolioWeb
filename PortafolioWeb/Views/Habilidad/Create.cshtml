@model PortafolioWebAdministracion.Models.Habilidad

@{
    ViewData["ControllerName"] = "Habilidad Tecnica";
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-primary text-left" role="alert">
    <b>NUEVA HABILIDAD TECNICA</b>
</div>
<hr />
<div class="row text-left">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label asp-for="HabilidadDescripcion" class="control-label"></label>
            <div class="form-group input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text fas fa-hand-rock alert-info" />
                </div>
                <input asp-for="HabilidadDescripcion" class="form-control" style="height:30px" placeholder="Ingrese una nueva habilidad" />
                <span asp-validation-for="HabilidadDescripcion" class="alert-danger" style="font-weight:bolder;"></span>
            </div>

            <label asp-for="Nivel" class="control-label"></label>
            <div class="form-group input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text fas fa-signal alert-info" />
                </div>
                <select asp-for="Nivel" class="form-control" style="height:30px">
                    <option value="">Seleccione el nivel</option>
                    <option value="Basico">Basico</option>
                    <option value="Intermedio">Intermedio</option>
                    <option value="Avanzado">Avanzado</option>
                </select>              
                <span asp-validation-for="Nivel" class="alert-danger" style="font-weight:bolder;"></span>
            </div>

            <div class="form-group text-left">
                <a class="btn btn-info btn-sm" data-toggle="tooltip"
                   data-placement="top"
                   title="Regresar" asp-action="Index">
                    <span class="fas fa-arrow-circle-left" />
                </a>
                <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
