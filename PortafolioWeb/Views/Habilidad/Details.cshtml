@model PortafolioWebAdministracion.Models.Habilidad

@{
    ViewData["ControllerName"] = "Habilidad Tecnica";
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-primary text-left" role="alert">
    <b>DETALLE DE HABILIDAD TECNICA</b>
</div>
<div class="alert alert-info text-left" role="alert">
    Informacion de habilidad tecnica seleccionada
</div>

<table class="table table-hover table-dark text-left">
    <thead>
        <tr>
            <th scope="col">
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HabilidadDescripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nivel)
            </th>          
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>
                @Html.DisplayFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayFor(model => model.HabilidadDescripcion)
            </th>
            <th>
                @Html.DisplayFor(model => model.Nivel)
            </th>         
        </tr>
    </tbody>
</table>
<hr />
<div class="text-left">
    <div class="form-group">
        <a class="btn btn-info btn-sm" data-toggle="tooltip"
           data-placement="top"
             
           title="Regresar" asp-action="Index">
            <span class="fas fa-arrow-circle-left" />
        </a>
        <a class="btn btn-warning btn-sm" data-toggle="tooltip"
           data-placement="top"
           title="Modificar habilidad tecnica" asp-action="Edit"
           asp-route-id="@Model.Id">
            <span class="fas fa-edit" />
        </a>
    </div>
</div>

