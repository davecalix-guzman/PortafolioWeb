@model IEnumerable<PortafolioWebAdministracion.Models.Referencia>

@{   ViewData["ControllerName"] = "Referencias";
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="alert alert-primary text-left" role="alert">
    <b>LISTADO DE REFERENCIAS PROFESIONALES</b>
</div>
<p class="text-left">
    <div class="form-group input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text fas fa-plus alert-danger" />
        </div>
        <a class="btn btn-info btn-sm"
           data-toggle="tooltip"
           data-placement="top"
           title="Crear nueva referencia profesional"
           asp-action="Create">
            Nueva Referencia Profesional
        </a>
    </div>
</p>
<hr />
<table class="table table-striped table-hover table-dark text-left">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profesion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profesion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" data-toggle="tooltip"
                       data-placement="top"
                       title="Modificar referencia" asp-action="Edit" asp-route-id="@item.Id">
                        <span class="fas fa-edit" />
                    </a>
                    <a class="btn btn-info btn-sm" data-toggle="tooltip"
                       data-placement="top"
                       title="Ver detalles" asp-action="Details" asp-route-id="@item.Id">
                        <span class="fas fa-info-circle" />
                    </a>
                    <a class="btn btn-danger btn-sm" data-toggle="tooltip"
                       data-placement="top"
                       title="Eliminar referencia" asp-action="Delete" asp-route-id="@item.Id">
                        <span class="fas fa-trash" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
